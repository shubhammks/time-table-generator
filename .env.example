# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=timetable_db
DB_USER=timetable_user
DB_PASSWORD=secure_password_123
DATABASE_URL=mysql+pymysql://timetable_user:secure_password_123@mysql:3306/timetable_db

# MySQL Root Password (for Docker setup)
MYSQL_ROOT_PASSWORD=root_password_123
MYSQL_DATABASE=timetable_db
MYSQL_USER=timetable_user
MYSQL_PASSWORD=secure_password_123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Application Configuration
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
API_V1_STR=/api/v1

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_TITLE=Timetable Management System

# Redis Configuration (for future caching/queues)
REDIS_URL=redis://redis:6379/0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True
FROM_EMAIL=noreply@timetable-system.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Algorithm Configuration
CSP_MAX_ITERATIONS=1000
CSP_TIME_LIMIT_SECONDS=300
OPTIMIZER_MAX_ITERATIONS=100
RANDOM_SEED=42

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
